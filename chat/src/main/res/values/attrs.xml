<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ConversationView">
        <attr name="avatarBackgroundColor" format="color" />
        <attr name="avatarTextColor" format="color" />
        <attr name="userAvatarType" format="enum">
            <enum name="initial" value="0"/>
            <enum name="image" value="1"/>
        </attr>
        <attr name="userNameField" format="string" />
        <attr name="userAvatarField" format="string" />
        <attr name="avatarHiddenForIncomingMessages" format="boolean"/>
        <attr name="avatarHiddenForOutgoingMessages" format="boolean" />
        <attr name="messageSenderTextColor" format="color" />
    </declare-styleable>
</resources>